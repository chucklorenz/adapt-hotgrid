<div class="hotgrid-grid-item">
    <button class="base hotgrid-item-image hotgrid-item-states-{{#if _graphic.hasImageStates}}image{{else}}css{{/if}} {{#if _isVisited}}visited{{/if}} {{#if ../_hasRoundedImages}}border-radius{{/if}}" role="button" aria-label="{{#if _graphic.title}}{{_graphic.title}}.{{/if}}{{#if _graphic.alt}} {{_graphic.alt}}.{{/if}}{{#if _isVisited}} {{../../_globals._accessibility._ariaLabels.visited}}.{{/if}}">
        <img src="{{_graphic.src}}"/>

        {{#if _graphic.hasImageStates}}
            <img src="{{_graphic.srcHover}}" class="hotgrid-item-image-hover"/>
            <img src="{{_graphic.srcVisited}}" class="hotgrid-item-image-visited"/>
        {{/if}}

    </button>

    {{#if _graphic.title}}
        <div class="hotgrid-item-title">
            <div class="hotgrid-item-title-inner">
                {{{_graphic.title}}}
            </div>
        </div>
    {{/if}}
</div>